<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{ABSOLUTE} %5p %c{1}:%L - %m%n" />
		</Console>
		<File name="LogFile" filename="d:/mylog.log">
			<PatternLayout pattern="%d{ABSOLUTE} %5p %c{1}:%L - %m%n" />
		</File>
	</Appenders>
	<Loggers>
		<Root level="info">
			<AppenderRed ref="Console" />
		</Root>
	</Loggers>
</Configuration>